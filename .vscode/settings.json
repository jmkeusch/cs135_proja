{
    "editor.formatOnSave": true,
    "isort.check": true,
    "flake8.args": [
        "--max-line-length=88",
        "--extend-ignore=E203,E701"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "isort.args": [
        "--profile=black"
    ]
}
